<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020000"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="272dp"
        app:srcCompat="@drawable/imagen_de_autobus"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="68dp" />

    <Button
        android:id="@+id/bIniciar_Sesion"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:backgroundTint="#454343"
        android:text="Iniciar Sesion"
        android:textColorHighlight="#333232"
        android:textColorLink="#403F3F"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="429dp" />

    <Button
        android:id="@+id/bregistrarse"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:backgroundTint="#454343"
        android:text="Registrarse"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="517dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RutaMovilGDL"
        android:textColor="#F8F7F7"
        android:textColorHighlight="#EFE7E7"
        android:textColorHint="#FAF3F3"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="295dp" />
</androidx.constraintlayout.widget.ConstraintLayout>